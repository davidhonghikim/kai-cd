{
  "manifest_version": 3,
  "name": "ChatDemon-Cursor",
  "version": "0.1.0",
  "description": "A browser extension to manage and integrate various AI services.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs",
    "scripting",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
} 